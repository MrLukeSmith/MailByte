- if @notice
  %span.notice{:class => @notice['type']}
    =@notice['msg']
%h2 
  Campaigns (#{@c.count}/Account max campaigns)
  %a.gb{:href => "/campaign/new"} New campaign
%p
  - if @c.count > 0
    %table
      %tr
        %th Name
        %th Date created
        %th Subscribers
        %th Templates
        %th Input domains
        %th Options
      - @c.each do |camp|
        %tr
          %td= link_to camp[:name], "/campaign/#{camp[:id]}"
          %td= camp[:date_created]
          %td= camp.totalSubscribers
          %td= camp.totalTemplates
          %td= camp.totalInputdomains
          %td [Configure][Delete]
  - else 
    You don't have any campaigns.
